<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.aganyun.acode.ui.fra.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/theme_color" />

    <include
        layout="@layout/include_homeact_title_search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44dp" />

    <!--https://blog.csdn.net/cy123cy456cy/article/details/77802115-->
    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:xTabMode="scrollable"
        android:background="@color/white"
        app:tabPaddingEnd="-1dp"
        app:tabPaddingStart="-1dp"
        app:xTabDividerWidthWidthText="true"
        app:xTabTextBold="true"
        app:xTabIndicatorColor="@color/indicator_color"
        app:xTabSelectedTextColor="@color/tx_color_1A1A1A"
        app:xTabTextColor="@color/tx_color_666666"
        app:xTabTextAppearance="@style/TabLayoutTextStyle"/>

    <include
        layout="@layout/include_brown_bg_tv_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/dark_brown" />

    <android.support.v4.view.ViewPager
        android:id="@+id/homefra_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>
