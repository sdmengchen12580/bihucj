        android:layout_height="wrap_content"
        android:text="122"
        android:textColor="@color/tx_color_333333"
        android:textSize="@dimen/_12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="条相关结果"
        android:textColor="@color/tx_color_333333"
