<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--水平指示器-->
    <declare-styleable name="CaterpillarIndicator">
        <attr name="slide_text_color" format="color|reference" />
        <attr name="slide_text_size_normal" format="dimension" />
        <attr name="slide_text_size_selected" format="dimension" />
        <attr name="slide_text_color_normal" format="color" />
        <attr name="slide_text_color_selected" format="color" />
        <attr name="slide_footer_line_height" format="dimension" />
        <attr name="slide_footer_color" format="color" />
        <attr name="slide_round" format="boolean" />
        <attr name="slide_item_width" format="dimension" />
        <attr name="slide_caterpillar" format="boolean" />
        <attr name="slide_count" format="integer" />
        <attr name="slide_padding_bottom" format="dimension" />
        <attr name="slide_text_center_flag">
            <enum name="textCenter" value="0" />
            <enum name="lineCenter" value="1" />
        </attr>
    </declare-styleable>


    <!--搜索历史-->
    <declare-styleable name="TagsLayout">
        <attr name="tagVerticalSpace" format="dimension" />
        <attr name="tagHorizontalSpace" format="dimension" />
    </declare-styleable>

    <!--字排版-->
    <declare-styleable name="customtxv">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="paddingLeft" format="dimension"/>
        <attr name="paddingRight" format="dimension"/>
    </declare-styleable>

    <!--圆点填充色-->
    <declare-styleable name="MySmallCircleColor">
        <attr name="mSolidColor" format="color" />
    </declare-styleable>

    <!--签到的圆-->
    <declare-styleable name="signInCircle">
        <attr name="android:text"/>
        <attr name="text" format="string" />
    </declare-styleable>
</resources>